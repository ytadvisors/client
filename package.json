{
  "name": "client",
  "version": "1.0.0",
  "description": "Static frontend website",
  "main": "webpack.config.js",
  "scripts": {
    "start": "better-npm-run start-dev",
    "lint": "standard",
    "build": "better-npm-run build",
    "deploy": "better-npm-run deploy"
  },
  "betterScripts": {
    "start-dev": {
      "command": "webpack-dev-server --progress --hot --colors --history-api-fallback --display-error-details",
      "env": {
        "DEVELOPMENT": true,
        "DEPLOY": false,
        "DEVTOOLS": true
      }
    },
    "build": {
      "command": "webpack -p",
      "env": {
        "DEVELOPMENT": false,
        "DEVTOOLS": false,
        "DEPLOY": false,
        "NODE_ENV": "production"
      }
    },
    "deploy": {
      "command": "webpack -p",
      "env": {
        "DEVELOPMENT": false,
        "DEVTOOLS": false,
        "DEPLOY": true,
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ytwguru/client.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ytwguru/client/issues"
  },
  "homepage": "https://github.com/ytwguru/client#readme",
  "devDependencies": {
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.8",
    "can-use-dom": "^0.1.0",
    "clean-webpack-plugin": "^0.1.9",
    "css-loader": "0.26.0",
    "dotenv": "2.0.0",
    "extract-text-webpack-plugin": "1.0.1",
    "history": "^2.1.1",
    "json-loader": "0.5.4",
    "jsx-control-statements": "^3.1.2",
    "less": "2.7.1",
    "less-loader": "2.2.3",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-helmet": "^3.1.0",
    "react-router": "^2.4.0",
    "react-router-redux": "^4.0.4",
    "redux": "^3.5.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-logger": "^2.6.1",
    "scroll-behavior": "^0.7.0",
    "standard": "^7.0.1",
    "standard-loader": "^3.0.0",
    "static-site-generator-webpack-plugin": "^2.0.1",
    "style-loader": "0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-s3-plugin": "0.9.2"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "jsx-control-statements",
      "transform-decorators-legacy"
    ]
  }
}
